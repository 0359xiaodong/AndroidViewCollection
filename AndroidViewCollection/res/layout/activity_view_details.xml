<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ui="http://schemas.android.com/apk/res/com.trungkent.androidviewcollection"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <br.com.dina.ui.widget.UIButton
            android:id="@+id/btnViewDemo"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            ui:title="View Live Demo" />

        <br.com.dina.ui.widget.UITableView
            android:id="@+id/tableView"
            style="@style/UITableView"
            android:layout_marginTop="15dip" />
    </LinearLayout>

</ScrollView>